                <h1 class="mt-4">LIST USERS</h1>

                <ol class="breadcrumb mb-4">
                    <!--                            <li class="breadcrumb-item active">Dashboard</li>-->
                </ol>
                <div class="row">

                </div>
                <div class="row">
                </div>
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-table me-1"></i>
                        DataTable About User
                    </div>
                    <div class="card-body">
                        <table id="datatablesSimple">
                            <thead>
                            <tr>
                                <th>STT</th>
                                <th>Avatar</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>User</th>
                                <th>Role</th>
                                <th>Banned</th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>STT</th>
                                <th>Avatar</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>User</th>
                                <th>Role</th>
                                <th>Banned</th>
                            </tr>
                            </tfoot>
                            <tbody>
                            <% users.forEach((user, index)=>{ %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <%if(user.avatarUrl){%>
                                    <td><img  src="<%= user.avatarUrl %>" alt="Avatar" style="width:40px;height:40px;border-radius: 50%;object-fit: cover"></td>
                                        <%} else {%>
                                        <td><img  src="/public/img/avatar/avatar-default.png" alt="Avatar" style="width:40px;height:40px;border-radius: 50%;object-fit: cover"></td>
                                    <% }%>
                                    <td><%= user.firstName %></td>
                                    <td><%= user.lastName %></td>
                                    <td><%= user.email %></td>
                                    <td><%= user.username %></td>
                                    <td><%= user.role %></td>
                                    <% if(user.isBanned){ %>
                                    <td><a href="/admin/banned?<%= user._id %>"
                                           class="btn btn-danger"><%= user.isBanned ? "Unban" : "Ban" %></a></td>
                                    <% } else { %>
                                    <td><a href="/admin/banned?<%= user._id %>"
                                           class="btn btn-success"><%= user.isBanned ? "Unban" : "Ban"  %></a></td>
                                    <%}%>
                                </tr>
                            <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
