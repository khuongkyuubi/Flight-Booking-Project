<section class="page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-md-6">

            </div>
            <div class="col-md-6">
                <div class="page-direction-button">
                    <a href="/home/booking"><i class="fa fa-home"></i>Go Back Home</a>
