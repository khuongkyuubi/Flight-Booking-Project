                    <div class="logo">
                        <img src="/public/img/logo.png" alt="Flight Template">
                    </div>
                    <div class="tabs-content">
                        <h4>Choose Your Direction:</h4>
                        <ul class="social-links">
                            <li><a href="https://www.facebook.com/groups/207964803013156/user/100002986066862">Find us on <em>Facebook</em><i class="fa fa-facebook"></i></a>
                            </li>
                            <li><a href="https://www.youtube.com/channel/UCfAm3w13QJvjxbX3zpc9vCg">Our <em>YouTube</em> Channel<i
                                            class="fa fa-youtube"></i></a></li>
                            <li><a href="http://instagram.com">Follow our <em>instagram</em><i
                                            class="fa fa-instagram"></i></a></li>
                        </ul>
                    </div>
                    <div class="page-direction-button">
                        <a href="contact.html"><i class="fa fa-phone"></i>Contact Us Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-5 col-md-offset-1">
                <section id="first-tab-group" class="tabgroup" style="width: 100%">
                    <div id="tab1">
                        <div class="submit-form">
                            <h4>Check availability for <em>direction</em>:</h4>
                            <form id="form-submit" action="/home/flight" method="GET">
                                <div class="row">
                                    <div class="col-md-6">
                                        <fieldset>
                                            <label for="from" class="search-field" >From:</label>
                                            <select required name='from' onchange='this.form.()'>
                                                <% airports.forEach( airport => { %>
                                                    <option value="<%= airport.code %>"><%= airport.city %>
                                                        (<%= airport.code %>)
                                                    </option>
                                                <% }) %>
                                            </select>
                                        </fieldset>
                                    </div>
                                    <div class="col-md-6">
                                        <fieldset>
                                            <label for="to" class="search-field" >To:</label>
                                            <select required name='to' onchange='this.form.()'>
                                                <% let selected = ""; airports.forEach( (airport, index)=> {
                                                    if (index === 2) {
                                                        selected = "selected"
                                                    } else {
                                                        selected = "";
                                                    }
                                                %>
                                                <option value="<%= airport.code %>" <%= selected %> ><%= airport.city %>
                                                    (<%= airport.code %>)
                                                </option>
                                                <% }) %>
                                            </select>
                                        </fieldset>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="radio-select">
                                            <div class="row">
                                                <div class="col-md-6 col-sm-6 col-xs-6">
                                                    <label for="oneway" class="search-field">Oneway</label>
                                                    <input type="radio" name="trip" id="oneway" value="one-way"
                                                           required="required" checked onchange='this.form.()'>
                                                </div>
                                                <div class="col-md-6 col-sm-6 col-xs-6">
                                                    <label for="round" class="search-field">Round</label>
                                                    <input type="radio" name="trip" id="round" value="round"
                                                           required="required" onchange='this.form.()'>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <fieldset>
                                            <label for="to" class="search-field" >Class:</label>
                                            <select required name='class' onchange='this.form.()'>
                                                <% classNames.forEach( (className, index)=> { %>
                                                    <option value="<%= className.class %>"><%= className.class %>
                                                    </option>
                                                <% }) %>
                                            </select>
                                        </fieldset>
                                    </div>
                                    <div class="col-md-6">
                                        <fieldset>
                                            <label for="departure" class="search-field" >Departure date:</label>
                                            <input name="departure" type="text" class="form-control date" id="deparure"
                                                   placeholder="Select date..." required="" onchange='this.form.()'>
                                        </fieldset>
                                    </div>

                                    <div class="col-md-6" id="return-date" style="visibility: hidden">
                                        <fieldset>
                                            <label for="return" class="search-field" >Return date:</label>
                                            <input name="return" type="text" class="form-control date" id="return"
                                                   placeholder="Select date..." onchange='this.form.()'>
                                        </fieldset>
                                    </div>


                                    <div class="col-md-12" id="return-date">
                                        <fieldset>
                                            <label for="passengers" class="search-field" >Passengers:</label>


                                        </fieldset>
                                        <div class="row">
                                            <div class="col-md-4">Adult</div>
                                            <div class="col-md-4">Child</div>
                                            <div class="col-md-4">Infant</div>
                                        </div>
                                        <div class="row">
                                            <!--                                            <div class="col-md-1">Adult</div>-->
                                            <div class="col-md-4">

                                                <input name="passengers" type="number" class="form-control text "
                                                       id="passengers"
                                                       value="1" min="1" required="" onchange='this.form.()'>
                                            </div>

                                            <!--                                            <div class="col-md-1">Child</div>-->
                                            <div class="col-md-4">

                                                <input name="passengers" type="number" class="form-control text"
                                                       value="0" min="0" required="" onchange='this.form.()'>
                                            </div>

                                            <!--                                            <div class="col-md-1">Infant</div>-->
                                            <div class="col-md-4">

                                                <input name="passengers" type="number" class="form-control text"
                                                       value="0" min="0" required="" onchange='this.form.()'>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6"></div>
                                    <div class="col-md-12">
                                        <fieldset>
                                            <button type="submit" id="form-submit" class="btn">Find Ticket Now</button>
                                        </fieldset>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>


